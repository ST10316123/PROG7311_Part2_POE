@{
    ViewData["Title"] = "Home - Agri-Connect";
}

<style>
    body {
        color: #2f4f2f;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .hero {
        background: linear-gradient(135deg, #7ec850, #a4e887); /* Lively green gradient */
        padding: 4rem 2rem;
        margin-bottom: 3rem;
        border-radius: 0;
        text-align: center;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .hero h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .hero p {
        font-size: 1.4rem;
        max-width: 700px;
        margin: 0 auto;
    }

    .section {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        width: 100%;
        margin-bottom: 3rem;
    }

    .section:nth-child(even) {
        flex-direction: row-reverse;
    }

    .section img {
        width: 100%;
        max-width: 450px;
        border-radius: 15px;
        margin: 1rem;
        opacity: 0;
        transform: translateY(20px);
        transition: all 1.5s ease;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .section-content {
        flex: 1;
        min-width: 300px;
        padding: 1rem 2rem;
        max-width: 600px;
    }

    .section-content h2 {
        color: #2e7031;
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .fade-in {
        opacity: 1 !important;
        transform: translateY(0) !important;
    }

    .btn-learn {
        background-color: #28a745;
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 5px;
        font-size: 1.3rem;
        margin-top: 1.5rem;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .btn-learn:hover {
        background-color: #218838;
    }
</style>

<div class="container-fluid">

    <div class="hero">
        <h1 class="display-4">Welcome to Agri-Connect</h1>
        <p class="lead">Empowering sustainable farming through technology and green energy solutions.</p>
    </div>

    <div class="section" id="Homepage">
        <img src="~/images/farmers.jpg" alt="Farmers collaborating" class="fade-target" />
        <div class="section-content">
            <h2>About Agri-Connect</h2>
            <p>
                Agri-Connect bridges the gap between farmers and green energy providers.
                By connecting agricultural producers with clean tech suppliers, we foster a more sustainable and efficient farming ecosystem.
            </p>
        </div>
    </div>

    <div class="section">
        <img src="~/images/solar-panels.jpg" alt="Solar panels on farm" class="fade-target" />
        <div class="section-content">
            <h2>Promoting Renewable Energy</h2>
            <p>
                Our mission is to reduce environmental impact in agriculture. We support solar, wind, and bioenergy
                solutions to power farms efficiently and affordably.
            </p>
        </div>
    </div>

    <div class="section">
        <img src="~/images/marketplace.jpg" alt="Marketplace for farm products" class="fade-target" />
        <div class="section-content">
            <h2>Connected Marketplace</h2>
            <p>
                Farmers can showcase their products, connect with eco-conscious customers, and adopt innovations
                that help their businesses thrive sustainably.
            </p>
        </div>
    </div>
    
</div>

@section Scripts {
    <script>
        window.addEventListener('load', () => {
            const targets = document.querySelectorAll('.fade-target');
            targets.forEach((img, index) => {
                setTimeout(() => {
                    img.classList.add('fade-in');
                }, index * 300);
            });
        });
    </script>
}
