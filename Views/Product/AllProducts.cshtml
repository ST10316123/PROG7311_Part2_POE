@model List<FarmerProductGroupViewModel>

@{
    ViewData["Title"] = "All Products Grouped by Farmer";
}

<h2>All Products</h2>

@foreach (var group in Model)
{
    <div class="mb-4">
        <h4>@group.FarmerName</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in group.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.ProductionDate.ToShortDateString()</td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@Url.Content(product.ImagePath)" alt="Product Image" width="100" />
                            }
                            else
                            {
                                <span>No image</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
