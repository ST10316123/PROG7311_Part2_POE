@model CategoryFilterModel
@{
    ViewData["Title"] = "All Products";
    var groupedProducts = ViewBag.GroupedProducts as List<FarmerProductGroupViewModel>;
}

<!-- Centered Heading -->
<h2 class="text-center">Farmer's Products</h2>

<!-- Filter Form (Centered) -->
<form asp-action="AllProducts" method="get" class="mb-4 d-flex justify-content-center w-100">
    <div class="form-row justify-content-center w-100">
        <div class="col-md-3 mb-3">
            <select name="category" class="form-control w-100">
                <option value="">-- Select Category --</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category" selected="@(Model.Category == category)">
                        @category
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3 mb-3">
            <input type="date" name="startDate" class="form-control w-100" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-3 mb-3">
            <input type="date" name="endDate" class="form-control w-100" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" />
        </div>
        <!-- Filter and Reset buttons side by side -->
        <div class="col-md-3 d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="AllProducts" class="btn btn-secondary ml-2">Reset</a>
        </div>
    </div>
</form>


<!-- Grouped Product List -->
@if (groupedProducts != null && groupedProducts.Any())
{
    foreach (var group in groupedProducts)
    {
        <h4>@group.FarmerName's Products</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in group.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.ProductionDate.ToShortDateString()</td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@Url.Content(product.ImagePath)" alt="Product Image" width="100" />
                            }
                            else
                            {
                                <span>No image</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <p>No products found.</p>
}
